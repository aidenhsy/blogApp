<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include("layouts/header");-%>
  </head>

  <body>
    <!-- Navbar -->
    <%-include("layouts/navbar");-%>

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('<%=post.image%>')">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="post-heading">
              <h1><%=post.title%></h1>
              <h2 class="subheading"><%=post.body%></h2>
              <span class="meta"
                >Posted by
                <a href="#"><%=post.username%></a>
                on <%=post.datePosted.toDateString()%></span
              >
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Post Content -->
    <article>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <p><%=post.body%></p>
          </div>
        </div>
      </div>
    </article>

    <hr />

    <!-- Footer -->
    <footer><%-include("layouts/footer");-%></footer>

    <!-- Scripts -->
    <%-include("layouts/scripts");-%>
  </body>
</html>
